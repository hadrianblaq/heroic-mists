{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! The big featured header on the homepage, with the site logo and description }}
	
	<section class="pure-u-1">
        <section id="content">
		{{! Each post will be output using this markup }}
		{{#foreach posts}}
			{{#if @first}}
			<article class="main">
                <!-- A single blog post -->
                <header class="main-header">
					<h1><a href="{{url}}">{{{title}}}</a></h1>
					<h2><time datetime="{{date format='YYYY-MM-DD'}}">{{date format='DD MMM YYYY'}}</time> &ndash; {{author}} {{#if tags}}&ndash; {{tags}}{{/if}}</h2>
                </header>
				<section class="main-content">
					{{content}}
				</section>
			</article>
			
			{{else}}
			<article class="posts">
				<header class="posts-header">
					<h1><a href="{{url}}">{{{title}}}</a></h1>
					<h2><time datetime="{{date format='YYYY-MM-DD'}}">{{date format='DD MMM YYYY'}}</time> {{#if tags}}&ndash; {{tags}}{{/if}}</h2>
				</header>
				<p>{{excerpt characters="40"}}&hellip; <a href="{{@blog.url}}">read more.</a></p>
			</article>
			{{/if}}
		{{/foreach}}

		<nav class="pagination">{{pagination}}</nav>
		
        </section>
		<footer id="footer">
			<div class="inner">
				 <section class="copyright">Except where noted, content here is available under a <a href="http://creativecommons.org">Creative Commons</a> [<a href="http://creativecommons.org/licenses/by-nc-sa/3.0/au/">CC BY-NC-SA</a>] licence.</section>
				 <section class="poweredby">Proudly published with <a class="icon-ghost" href="http://ghost.org">&nbsp;</a></section>
			</div>
		</footer>
    </section>